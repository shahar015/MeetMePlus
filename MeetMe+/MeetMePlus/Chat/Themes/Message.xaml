<UserControl
    x:Class="MeetMe_.MeetMePlus.Chat.Themes.Message"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetMe_.MeetMePlus.Chat.Themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            x:Name="border"
            MaxWidth="600"
            Margin="10,12"
            HorizontalAlignment="Left"
            Background="#FF0067FB"
            CornerRadius="15 15 15 0">
            <!--<Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF009CFF" Offset="0"/>
                    <GradientStop Color="#FF0067FB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>-->
            <TextBlock
                x:Name="tbText"
                Margin="15"
                FontSize="20"
                Foreground="White"
                Text="..."
                TextWrapping="Wrap" />
        </Border>
        <TextBlock
            x:Name="tbWhen"
            Margin="10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="10"
            Text="time" />
    </Grid>
</UserControl>

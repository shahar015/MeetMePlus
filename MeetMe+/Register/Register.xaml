<Window
    x:Class="MeetMe_.Register.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetMe_.Register"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Register"
    Width="1920"
    Height="1080"
    FontFamily="{DynamicResource MaterialDesignFont}"
    WindowState="Maximized"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Login Background.png" />
    </Window.Background>
    <StackPanel>
        <Image
            Height="100"
            HorizontalAlignment="Left"
            Source="/Images/MeetMe+ Logo.png" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="100"
            Foreground="White"
            FontWeight="Bold"
            Text="Register" />
        <Frame Name="RegisterFrame" NavigationUIVisibility="Hidden" />
    </StackPanel>
</Window>
